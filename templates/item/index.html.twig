{% extends 'base.html.twig' %}

{% block title %}Mes outils{% endblock %}

{% block body %}
<div class="row g-4">
    {% for item in items %}
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <img src="{{ asset('uploads/items/' ~ item.picture) }}" ...>
                <div class="card-body">
                    <h5>{{ item.name }}</h5>
                    <p>{{ item.description }}</p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_item_show', {'id': item.id}) }}">Voir</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
