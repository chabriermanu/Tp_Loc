{% extends 'base.html.twig' %}

{% block title %}Tous les outils disponibles{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Catalogue d'outils</h1>
        <p class="lead text-muted">Découvrez tous les outils disponibles à la location</p>
    </div>

    {% if items is empty %}
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>
            Aucun outil disponible pour le moment.
        </div>
    {% else %}
        <div class="row g-4">
            {% for item in items %}
                <div class="col-md-4">
                    <div class="card shadow-sm h-100">
                        {% if item.picture %}
                            <img src="{{ asset('uploads/items/' ~ item.picture) }}" 
                                 class="card-img-top" 
                                 alt="{{ item.name }}"
                                 style="height: 200px; object-fit: cover;">
                        {% else %}
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" 
                                 style="height: 200px;">
                                <i class="fas fa-tools fa-3x text-white"></i>
                            </div>
                        {% endif %}
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ item.name }}</h5>
                            
                            {% if item.category %}
                                <span class="badge bg-primary mb-2 align-self-start">
                                    {{ item.category.name }}
                                </span>
                            {% endif %}
                            
                            <p class="card-text text-muted">
                                {{ item.description|length > 100 ? item.description|slice(0, 100) ~ '...' : item.description }}
                            </p>
                            
                            <div class="mt-auto">
                                <div class="mb-3">
                                    <small class="text-success">
                                        <i class="bi bi-person-check me-1"></i>
                                        Propriétaire vérifié
                                    </small>
                                </div>
                                
                                <a href="{{ path('app_item_show', {id: item.id}) }}" 
                                   class="btn btn-primary w-100">
                                    <i class="fas fa-eye me-2"></i>Voir les détails
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}