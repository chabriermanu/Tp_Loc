{% extends 'base.html.twig' %}

{% block title %}Mon Espace - MyLoc{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4">Mon Espace</h1>
    
    <div class="row g-4">
        <!-- Mon compte -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-user-circle fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Mon compte</h5>
                    <p class="card-text">Gérez vos informations personnelles.</p>
                    <a href="{{ path('app_user_account') }}" class="btn btn-info text-white">
                        <i class="fas fa-arrow-right me-2"></i>Accéder
                    </a>
                </div>
            </div>
        </div>

        <!-- Mes outils -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-tools fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Mes outils</h5>
                    <p class="card-text">Les outils que vous mettez en prêt.</p>
                    <a href="{{ path('app_user_tools') }}" class="btn btn-success text-white">
                        <i class="fas fa-arrow-right me-2"></i>Accéder
                    </a>
                </div>
            </div>
        </div>

        <!-- Mes emprunts -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-hand-holding fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Mes emprunts</h5>
                    <p class="card-text">Les outils que vous avez empruntés.</p>
                    <a href="{{ path('app_user_borrows') }}" class="btn btn-primary text-white">
                        <i class="fas fa-arrow-right me-2"></i>Accéder
                    </a>
                </div>
            </div>
        </div>

        <!-- Mes prêts -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-handshake fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Mes prêts</h5>
                    <p class="card-text">Vos outils actuellement prêtés.</p>
                    <a href="{{ path('app_user_loans') }}" class="btn btn-warning text-white">
                        <i class="fas fa-arrow-right me-2"></i>Accéder
                    </a>
                </div>
            </div>
        </div>

        <!-- Mes favoris -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-star fa-3x text-danger mb-3"></i>
                    <h5 class="card-title">Mes favoris</h5>
                    <p class="card-text">Outils sauvegardés pour plus tard.</p>
                    <a href="{{ path('app_user_favorites') }}" class="btn btn-danger text-white">
                        <i class="fas fa-arrow-right me-2"></i>Accéder
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
