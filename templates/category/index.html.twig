{% extends 'base.html.twig' %}

{% block title %}Catégories - MyLoc{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4">
            <i class="fas fa-tags text-primary me-2"></i>
            Catégories
        </h1>
        <p class="lead text-muted">Explorez nos outils par catégorie</p>
    </div>

    {% if categories is empty %}
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>
            Aucune catégorie disponible pour le moment.
        </div>
    {% else %}
        <div class="row g-4">
            {% for category in categories %}
                <div class="col-md-4 col-lg-3">
                    <a href="{{ path('app_category_show', {id: category.id}) }}" 
                       class="text-decoration-none">
                        <div class="card shadow-sm h-100 border-primary hover-card">
                            <div class="card-body text-center">
                                {# Icône de catégorie avec Icons8 #}
                                <div class="mb-3">
                                    {% set categoryIcons = {
                                        'Outillage électroportatif': 'https://img.icons8.com/fluency/96/drill.png',
                                        'Petit outillage manuel': 'https://img.icons8.com/fluency/96/wrench.png',
                                        'Gros outillage': 'https://img.icons8.com/fluency/96/toolbox.png',
                                        'Équipement léger': 'https://img.icons8.com/fluency/96/feather.png',
                                        'Matériel intermédiaire': 'https://img.icons8.com/fluency/96/maintenance.png',
                                        'Petit matériel': 'https://img.icons8.com/fluency/96/hammer.png',
                                        'Équipement moyen': 'https://img.icons8.com/fluency/96/screwdriver.png',
                                        'Gros équipement': 'https://img.icons8.com/fluency/96/truck.png',
                                        'Petit électroménager': 'https://img.icons8.com/fluency/96/blender.png',
                                        'Cuisine & Réception Gros matériel': 'https://img.icons8.com/fluency/96/restaurant.png',
                                        'Multimédia Matériel standard': 'https://img.icons8.com/fluency/96/tv.png',
                                        'Multimédia Matériel pro': 'https://img.icons8.com/fluency/96/video-camera.png',
                                        'Transport Accessoires': 'https://img.icons8.com/fluency/96/bicycle.png',
                                        'Transport Remorques': 'https://img.icons8.com/fluency/96/trailer.png',
                                        'Bébé & Enfant Équipement léger': 'https://img.icons8.com/fluency/96/stroller.png',
                                        'Bébé & Enfant Équipement complet': 'https://img.icons8.com/fluency/96/baby.png'
                                    } %}
                                    
                                    <img src="{{ categoryIcons[category.name] ?? 'https://img.icons8.com/fluency/96/tag.png' }}" 
                                        alt="{{ category.name }}" 
                                        width="80" 
                                        height="80"
                                        class="mb-2">
                                </div>
                                
                                {# Nom de la catégorie #}
                                <h5 class="card-title text-dark">{{ category.name }}</h5>

                                
                                {# Nombre d'items #}
                                <div class="mt-3">
                                    <span class="badge bg-primary rounded-pill">
                                        {{ category.items|length }} outil{% if category.items|length > 1 %}s{% endif %}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    {% endif %}
    
    <div class="mt-4">
        <a href="{{ path('app_home') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour à l'acceuil
        </a>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
{% endblock %}
