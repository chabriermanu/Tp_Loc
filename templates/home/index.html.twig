{% extends 'base.html.twig' %}

{% block title %}Accueil - MyLoc{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 mb-4">
                <i class="fas fa-home text-primary"></i> 
                Bienvenue sur MyLoc!
            </h1>
            
            <div class="alert alert-info">
                {% if app.user %}
                    <h5><i class="fas fa-check-circle"></i> Vous êtes connecté !</h5>
                    <p class="mb-0">Email : <strong>{{ app.user.email }}</strong></p>
                {% else %}
                    <h5><i class="fas fa-info-circle"></i> Visiteur</h5>
                    <p class="mb-0">Créez un compte ou connectez-vous pour accéder à toutes les fonctionnalités.</p>
                {% endif %}
            </div>
        </div>
    </div>
    
    <div class="row mt-5 g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-key fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Locations</h5>
                    <p class="card-text">Découvrez nos biens disponibles à la location.</p>
                    <a href="#" class="btn btn-primary">
                        <i class="fas fa-arrow-right me-2"></i>Voir les locations
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-th-large fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Catégories</h5>
                    <p class="card-text">Parcourez nos biens par type</p>
                    <a href="#" class="btn btn-success">
                        <i class="fas fa-arrow-right me-2"></i>Voir les catégories
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-user-circle fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Mon compte</h5>
                    <p class="card-text">Gérez vos locations, favoris et informations personnelles.</p>
                    <a href="{{ path('app_user') }}" class="btn btn-info text-white">
                        <i class="fas fa-arrow-right me-2"></i>Accéder
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
